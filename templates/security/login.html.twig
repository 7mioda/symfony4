{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <form action="{{ path("login") }}" method="post">
            <div class="form-group">
                <label>Nom d'utilsateur</label>
                <input type="text" placeholder="Nom d'utilsateur" value="{{ lastUserName }}" required class="form-control" name="_username">
            </div>
            <div class="form-group">
                <label>Mot de passe</label>
                <input type="password" placeholder="Mot de passe" required class="form-control" name="_password">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success">Login</button>
            </div>
            {% if error %}
            <div class="alert alert-success alert-dismissible">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                <strong>{{ error.messageKey }}</strong> Indicates a successful or positive action.
            </div>
            {% endif %}
        </form>
    </div>
{% endblock %}
