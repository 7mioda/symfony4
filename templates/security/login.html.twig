{% extends 'base.html.twig' %}
{% block navbar %}
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <a class="navbar-brand" href="#"> ELAAMRA </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01"
                aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarColor01" style="float: left">

            {% if app.user %}
                <a href="{{ path("logout") }}">
                    <button class="btn btn-secondary my-2 my-sm-0 mr-2">Logout</button>
                </a>
            {% else %}
                <a href="{{ path("inscription") }}">
                    <button class="btn btn-secondary my-2 my-sm-0 mr-2">Inscription</button>
                </a>
            {% endif %}

        </div>
    </nav>
{% endblock %}

{% block body %}
    <div class="container-fluid mt-lg-5" style="max-width: 500px">
        <form action="{{ path("login") }}" method="post">
            <div class="form-group">
                <label>Nom d'utilsateur</label>
                <input type="text" placeholder="Nom d'utilsateur" value="{{ lastUserName }}" required
                       class="form-control" name="_username">
            </div>
            <div class="form-group">
                <label>Mot de passe</label>
                <input type="password" placeholder="Mot de passe" required class="form-control" name="_password">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success">Login</button>
            </div>
            {% if error %}
                <div class="alert alert-success alert-dismissible">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    <strong>{{ error.messageKey }}</strong>
                </div>
            {% endif %}
        </form>
    </div>
{% endblock %}
