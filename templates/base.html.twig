<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">

    <title>{% block title %}ELAAMRA{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('build/app.css') }}">
    {% endblock %}
</head>
<body>
{% block navbar %}
<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <a class="navbar-brand" href="{{ path("home") }}"> ELAAMRA </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01"
            aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarColor01">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
                <a class="nav-link" href="{{ path("home") }}">Home <span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path("showAll") }}">Products</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">Pricing</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path("about") }}">About</a>
            </li>
        </ul>
        {% if app.user %}
            <a href="{{ path("logout") }}">
                <button class="btn btn-secondary my-2 my-sm-0 mr-2">Logout</button>
            </a>
        {% else %}
        <a href="{{ path("login") }}">
            <button class="btn btn-secondary my-2 my-sm-0 mr-2">Login</button>
        </a>
        <a href="{{ path("inscription") }}">
            <button class="btn btn-secondary my-2 my-sm-0 mr-2">Inscription</button>
        </a>
        {% endif %}

    </div>
</nav>
{% endblock %}

<div class="container-fluid mt-lg-5">
    {% block body %}{% endblock %}
</div>
{% block javascripts %}
    <script src="{{ asset('build/app.js') }}"></script>
{% endblock %}
</body>
</html>
