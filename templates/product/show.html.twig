{% extends 'base.html.twig' %}

{% block body %}

        <div class="container">
            {% for product in products %}

                <div class="col-md-4 column productbox float-left">
                    {% if product.photo  %}
                        <img src="\uploads\{{ product.photo }}" class="img-fluid">
                    {% else %}
                        <img src="http://placehold.it/500x250?text=PRODUCT" class="img-fluid">
                    {% endif %}
                    <div class="producttitle">{{ product.name[:10] ~ '...' }}</div>
                    <div class="productprice">
                        <div class="pull-right"><a href="{{ path("show",{"id" : product.id}) }}" class="btn btn-primary btn-sm" role="button">Acheter</a></div>
                        <div class="pricetext">{{ product.price }}</div>
                    </div>
                </div>
            {% endfor %}
        </div>
       <div class="clearfix">
       </div>
    {{ knp_pagination_render(products) }}

{% endblock %}
